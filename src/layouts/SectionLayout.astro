---
interface Props {
  id: string; // ID para la primera sección (slot por defecto)
  color?: "primary" | "secondary";
  className?: string;
  border?: boolean;
  secondChild?: boolean;
  secondId?: string; // ID para la segunda sección (slot 'secondary')
}

const {
  id,
  color = "secondary",
  className,
  border = true,
  secondChild = false,
  secondId,
} = Astro.props;

const containerBase =
  "w-full px-6 md:px-8 py-15 md:py-20 flex flex-col gap-10";
const colorClasses =
  color === "primary"
    ? "bg-textured-primary text-secondary"
    : "bg-secondary text-primary";

const borderClass = border
  ? color === "primary"
    ? "p-6 md:p-10 lg:p-12 border-secondary/50 rounded-2xl border-3"
    :
      "p-6 md:p-10 lg:p-12 border-primary rounded-2xl border-3"
  : "";

const sectionBase = "w-full max-w-screen-2xl mx-auto animation-group";
---

<div
  class:list={[containerBase, colorClasses]}
  data-section-theme={color === "primary" ? "dark" : "light"}
>
  <section id={id} class:list={[sectionBase, borderClass, className]}>
    <slot />
  </section>

  {
    secondChild && (
      <section id={secondId} class:list={[sectionBase, borderClass]}>
        <slot name="secondary" />{" "}
      </section>
    )
  }
</div>
