---
interface Props {
  color?: "primary" | "secondary";
  className?: string;
}

const { color = "secondary", className } = Astro.props;

// Clases base del contenedor exterior
const containerBase =
  "w-full p-6 md:p-8 mb-0 flex flex-col gap-16 md:gap-20 lg:gap-25";

// Clases condicionales basadas en el color
const colorClasses =
  color === "primary"
    ? "bg-textured-primary text-white border-white/50"
    : "bg-white text-primary border-primary";
---

<div class:list={[containerBase, colorClasses, className]}>
  <slot />
</div>
