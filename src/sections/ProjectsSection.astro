---
import SectionLayout from "@/layouts/SectionLayout.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import AnimatedItem from "@/components/ui/AnimatedItem.astro";
import Button from "@/components/ui/Button.astro";

const { t, lang } = Astro.props;
// const featuredProjects = PROJECTS.slice(0, 6);
---

<SectionLayout
  id="projects"
  color="secondary"
  className="flex flex-col gap-8 sm:gap-10"
  border={false}
>
  <SectionTitle text={t.title} color="primary" />
  <p class="font-secondary text-sm xs:text-base sm:text-md md:text-lg">
    {t.description}
  </p>

  <div class="projects-grid">
    {
      t.projects.map((project, index) => (
        <AnimatedItem
          delay={index * 200}
          className={`project-item-${index + 1} project-item`}
          typeAnimation="card"
        >
          <ProjectCard
            {project}
            {lang}
            categories={t.categories}
            size={index === 0 || index === 5 ? "large" : "small"}
          />
        </AnimatedItem>
      ))
    }
  </div>

  <div class="md:m-auto">
    <Button
      as="a"
      href={`/${lang}/projects/`}
      text={t.cta_all_projects}
      fill={false}
      color="primary"
      arrow={true}
    />
  </div>
</SectionLayout>

<style>
  /* Grid complejo para el layout asimétrico */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }
  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .project-item-1 {
      grid-column: span 2;
    }
    .project-item-6 {
      grid-column: span 2;
    }
  }
  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    .project-item-1 {
      grid-column: span 2;
      grid-row: span 2;
    }
    .project-item-6 {
      grid-column: span 2;
      grid-row: span 2;
    }
  }
</style>

