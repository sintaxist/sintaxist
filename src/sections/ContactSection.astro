---
import AnimatedItem from "@/components/ui/AnimatedItem.astro";
import Button from "@/components/ui/Button.astro";
import { socialLinks, schedulingLink } from "@/data/links.js";
import SectionLayout from "@/layouts/SectionLayout.astro";

interface Props {
  t: any;
  socials?: object;
}

const { t, socials } = Astro.props;
---

<SectionLayout id="contact" color="secondary" threshold="0.6">
  <div class="flex flex-col items-center gap-10">
    <AnimatedItem>
      <img
        src="/assets/alejandro-canek-logo.svg"
        alt={t.titleAlt}
        class="w-full max-w-xs md:max-w-md"
      />
    </AnimatedItem>

    <AnimatedItem delay={200}>
      <p
        class="font-secondary text-center text-sm xs:text-base sm:text-md md:text-lg leading-[160%] text-primary"
      >
        {t.description}
      </p>
    </AnimatedItem>

    <div class="flex items-center justify-center gap-4 md:gap-6">
      {
        socialLinks.map((link, index) => (
          <AnimatedItem
            className="transition-all hover:-translate-y-1"
            delay={index * 200}
          >
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              title={link.name}
              aria-label={socials[link.ariaLabelKey]}
              class="text-primary hover:text-primary-hover transition-all"
            >
              <link.icon class="w-8 sm:w-9 h-8 sm:h-9" />
            </a>
          </AnimatedItem>
        ))
      }
    </div>

    <AnimatedItem delay={600}>
      <Button
        as="a"
        text={t.cta}
        href={schedulingLink}
        fill={false}
        color="primary"
        arrow={true}
        target="_blank"
      />
    </AnimatedItem>
  </div>
</SectionLayout>
