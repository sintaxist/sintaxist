          class="hidden md:block text-center m-auto mt-16"
        >
          <Button
            id="show-more-btn"
            variant="secondary"
            size="lg"
            className="xs:min-w-[280px] h-[56px]"
          >
            <span class="btn-text">Mostrar M√°s Proyectos</span>
            <div class="btn-loader hidden">
              <>
                <span class="dot" />
                <span class="dot" />
                <span class="dot" />
              </>
            </div>
