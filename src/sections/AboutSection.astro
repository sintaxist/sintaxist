---
import SectionLayout from "@/layouts/SectionLayout.astro";
import AnimatedItem from "@/components/ui/AnimatedItem.astro";
import AnimatedCounter from "@/components/ui/AnimatedCounter.astro";
import Button from "@/components/ui/Button.astro";

const { t } = Astro.props;
---

<SectionLayout color="primary">
  <section
    id="aboutMe"
    class="w-full border-3 border-secondary rounded-2xl max-w-screen-xl mx-auto my-[100px] px-6 xs:px-10 py-10 lg:py-20"
  >
    <AnimatedItem>
      <h2
        class="anim-item flex items-center gap-4 font-primary text-4xl md:text-5xl"
      >
        <svg
          width="24"
          height="28"
          viewBox="0 0 24 28"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M12.4434 2.80385L13.684 8.03077L18.9109 9.27139L13.684 10.512L12.4434 15.739L11.2028 10.512L5.97587 9.27139L11.2028 8.03077L12.4434 2.80385ZM3.125 10.5L4.54167 15.1667L9.20833 16.5833L4.54167 18L3.125 22.6667L1.70833 18L-2.98023e-07 16.5833L1.70833 15.1667L3.125 10.5Z"
            fill="white"></path></svg
        >
        {t.title}
      </h2>
    </AnimatedItem>

    <div
      class="font-secondary text-base sm:text-md md:text-lg max-w-4xl space-y-4"
    >
      <AnimatedItem delay={200}>
        <p class="anim-item">{t.paragraph1}</p>
      </AnimatedItem>
      <AnimatedItem delay={400}>
        <p class="anim-item">{t.paragraph2}</p>
      </AnimatedItem>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-3 gap-10 sm:gap-6 text-center sm:text-left"
    >
      {
        t.stats.map((stat, index) => (
          <AnimatedItem delay={800 + index * 150}>
            <div class="anim-item flex flex-col sm:flex-row items-center gap-3">
              <span class="font-primary text-6xl md:text-7xl leading-none">
                <AnimatedCounter to={stat.to} suffix={stat.suffix} />
              </span>
              <span class="font-secondary text-sm uppercase leading-tight">
                {stat.text}
              </span>
            </div>
          </AnimatedItem>
        ))
      }
    </div>

    <div>
      <AnimatedItem delay={1250}>
        <div class="anim-item">
          <Button
            as="a"
            href="#contact"
            text={t.cta}
            fill={false}
            color="white"
            arrow={true}
          />
        </div>
      </AnimatedItem>
    </div>
  </section>
</SectionLayout>
