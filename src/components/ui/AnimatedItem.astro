---
interface Props {
  delay?: number;
  className?: string;
}

const { delay = 0, className } = Astro.props;
---

<style>
  .animated-text-wrapper {
    overflow: hidden;
  }

  .animated-text-content {
    transform: translateY(100%);
    transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .animated-text-wrapper.is-visible .animated-text-content {
    transform: translateY(0);
  }
</style>

<div
  class:list={["animated-text-wrapper", className]}
  data-animate="text"
  data-delay={delay}
>
  <div class="animated-text-content">
    <slot />
  </div>
</div>
