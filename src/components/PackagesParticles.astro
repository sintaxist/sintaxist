<div class="absolute inset-0 overflow-hidden pointer-events-none">
  <canvas id="packages-particles-canvas" class="w-full h-full"></canvas>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const canvas = document.getElementById('packages-particles-canvas');
    if (!canvas) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    let particles = [];

    const colors = [
      '#10b981', // emerald
      '#3b82f6', // blue
      '#f59e0b', // amber
    ];

    const createParticles = () => {
      const totalParticles = 80; // un poco menos de partículas en total
      particles = [];

      for (let i = 0; i < totalParticles; i++) {
        let x, y;

        if (i < totalParticles * 0.2) {
          // 20% de las partículas → zona izquierda
          x = Math.random() * canvas.width * 0.3;
          y = Math.random() * canvas.height * 0.4 + canvas.height * 0.1; // baja un poco el rango vertical
        } else if (i < totalParticles * 0.5) {
          // 30% → parte inferior
          x = Math.random() * canvas.width;
          y = canvas.height * 0.7 + Math.random() * canvas.height * 0.3;
        } else {
          // resto → posición aleatoria normal
          x = Math.random() * canvas.width;
          y = Math.random() * canvas.height;
        }

        particles.push({
          x,
          y,
          vx: (Math.random() - 0.5) * 0.2,
          vy: (Math.random() - 0.5) * 0.2,
          size: Math.random() * 4 + 2,
          opacity: Math.random() * 0.6 + 0.4,
          color: colors[Math.floor(Math.random() * colors.length)],
          life: Math.random() * Math.PI * 2
        });
      }
    };

    const resizeCanvas = () => {
      canvas.width = canvas.offsetWidth;
      canvas.height = canvas.offsetHeight;
      createParticles();
    };

    const animate = () => {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      particles.forEach(p => {
        p.x += p.vx;
        p.y += p.vy;

        if (p.x < 0 || p.x > canvas.width) p.vx *= -1;
        if (p.y < 0 || p.y > canvas.height) p.vy *= -1;

        p.life += 0.01;
        const pulse = Math.sin(p.life) * 0.3 + 0.7;

        ctx.save();
        ctx.globalAlpha = p.opacity * pulse;

        const gradient = ctx.createRadialGradient(p.x, p.y, 0, p.x, p.y, p.size * 2);
        gradient.addColorStop(0, p.color);
        gradient.addColorStop(1, p.color + '00');

        ctx.fillStyle = gradient;
        ctx.beginPath();
        ctx.arc(p.x, p.y, p.size * pulse, 0, Math.PI * 2);
        ctx.fill();
        ctx.restore();
      });

      requestAnimationFrame(animate);
    };

    resizeCanvas();
    animate();
    window.addEventListener('resize', resizeCanvas);
  });
</script>

<style>
  #packages-particles-canvas {
    filter: blur(1px);
  }
</style>
