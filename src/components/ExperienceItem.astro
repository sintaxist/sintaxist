---
import IconBriefcase from "@/icons/IconBriefcase.astro";
const { job } = Astro.props;
---
<div class="relative pl-12 md:pl-16">
  <div class="timeline-icon absolute left-0 top-1">
    <IconBriefcase class="w-8 h-8 text-secondary" />
  </div>

  <div class="flex flex-col gap-2">
    <p class="font-secondary text-sm text-secondary">{job.dates}</p>
    <h3 class="font-primary text-xl text-secondary">{job.company}</h3>
    <h4 class="font-secondary font-semibold text-md text-secondary">{job.role}</h4>
    <ul class="list-disc pl-5 space-y-2 font-secondary text-secondary mt-2">
      {job.tasks.map(task => <li>{task}</li>)}
    </ul>
  </div>
</div>
